<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nazwa produktu:"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/surfaceView" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opis produktu:"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/name2"/>

    <TextView
        android:id="@+id/desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc1"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/toTake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do zlecenia ależy pobrać: "
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/desc2"/>

    <TextView
        android:id="@+id/quant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc2"
        android:layout_toRightOf="@+id/toTake"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/quant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc2"
        android:layout_toRightOf="@+id/quant1"
        android:text=" sztuk"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scannedID"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/detected"
        android:layout_alignLeft="@+id/detected"
        android:layout_alignStart="@+id/detected"
        android:layout_marginTop="47dp" />

    <ImageView
        android:id="@+id/prodImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potwierdz"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp" />

    <ImageView
        android:id="@+id/detected"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/btn_toggle"
        android:layout_marginRight="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>


</RelativeLayout>